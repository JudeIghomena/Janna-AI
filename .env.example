# ============================================================
# Janna AI - Environment Variables Reference
# Copy this file to .env.local and fill in your values
# ============================================================

# --- AWS ---
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# --- Cognito ---
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX

# --- Database (RDS Postgres) ---
DATABASE_URL=postgresql://janna:password@localhost:5432/janna_db

# --- Redis (ElastiCache) ---
REDIS_URL=redis://localhost:6379

# --- S3 ---
S3_BUCKET_NAME=janna-ai-attachments-dev
S3_PRESIGN_EXPIRY_SECONDS=3600

# --- SQS ---
SQS_INGESTION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/janna-ingestion-dev

# --- OpenAI ---
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# --- Local vLLM ---
LOCAL_VLLM_BASE_URL=http://localhost:8000/v1
LOCAL_VLLM_API_KEY=none
LOCAL_VLLM_MODEL=meta-llama/Llama-3.1-70B-Instruct

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_DAY=1000000

# --- App ---
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_COGNITO_REGION=us-east-1
NEXT_PUBLIC_APP_NAME=Janna AI

# --- Secrets Manager (prod only - overrides above) ---
# SECRETS_MANAGER_SECRET_ID=janna-ai/prod/secrets
