# ─── Server ──────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://janna:janna_dev_password@localhost:5432/janna_db

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── AWS ──────────────────────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
# For local dev with LocalStack:
# AWS_ENDPOINT_URL=http://localhost:4566

# ─── S3 ───────────────────────────────────────────────────────────────────────
S3_BUCKET_NAME=janna-attachments-dev
S3_PRESIGN_EXPIRY_SECONDS=3600

# ─── SQS ──────────────────────────────────────────────────────────────────────
SQS_INGESTION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/janna-ingestion-dev

# ─── Cognito ──────────────────────────────────────────────────────────────────
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1
# JWKS is derived: https://cognito-idp.{region}.amazonaws.com/{userPoolId}/.well-known/jwks.json

# ─── OpenAI ───────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...

# ─── Anthropic ────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ─── Local vLLM ───────────────────────────────────────────────────────────────
LOCAL_MODEL_ENDPOINT=http://localhost:8000/v1
LOCAL_MODEL_API_KEY=local-key

# ─── Rate limiting ────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_CHAT_MAX=20

# ─── File uploads ─────────────────────────────────────────────────────────────
MAX_FILE_SIZE_MB=50
ALLOWED_MIME_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,image/jpeg,image/png,image/webp

# ─── RAG ──────────────────────────────────────────────────────────────────────
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ─── Secrets Manager (prod) ───────────────────────────────────────────────────
# SECRETS_MANAGER_SECRET_ID=janna/prod/api-keys
