// ============================================================
// Janna AI - Prisma Schema
// Database: PostgreSQL with pgvector extension
// ============================================================

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

// ──────────────────────────────────────────
// Users
// ──────────────────────────────────────────
model UserProfile {
  id        String   @id // Cognito sub
  email     String   @unique
  role      UserRole @default(USER)
  disabled  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  conversations Conversation[]
  attachments   Attachment[]
  usageEvents   UsageEvent[]
  apiKeys       ApiKey[]

  @@map("user_profiles")
}

enum UserRole {
  USER
  ADMIN
}

// ──────────────────────────────────────────
// Conversations
// ──────────────────────────────────────────
model Conversation {
  id                   String    @id @default(cuid())
  userId               String    @map("user_id")
  title                String    @default("New Conversation")
  archived             Boolean   @default(false)
  parentConversationId String?   @map("parent_conversation_id")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  user          UserProfile    @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentConv    Conversation?  @relation("BranchFrom", fields: [parentConversationId], references: [id])
  branches      Conversation[] @relation("BranchFrom")
  messages      Message[]
  attachments   Attachment[]
  usageEvents   UsageEvent[]

  @@index([userId, archived, updatedAt(sort: Desc)])
  @@index([parentConversationId])
  @@map("conversations")
}

// ──────────────────────────────────────────
// Messages
// ──────────────────────────────────────────
model Message {
  id               String    @id @default(cuid())
  conversationId   String    @map("conversation_id")
  role             String    // system | developer | user | assistant | tool
  content          String
  parentMessageId  String?   @map("parent_message_id")
  metadata         Json?     @default("{}")
  createdAt        DateTime  @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  parent       Message?     @relation("MessageThread", fields: [parentMessageId], references: [id])
  children     Message[]    @relation("MessageThread")

  @@index([conversationId, createdAt])
  @@index([parentMessageId])
  @@map("messages")
}

// ──────────────────────────────────────────
// Attachments
// ──────────────────────────────────────────
model Attachment {
  id             String           @id @default(cuid())
  userId         String           @map("user_id")
  conversationId String?          @map("conversation_id")
  filename       String
  mimeType       String           @map("mime_type")
  size           Int
  s3Key          String           @map("s3_key")
  status         AttachmentStatus @default(UPLOADING)
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  user         UserProfile    @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation?  @relation(fields: [conversationId], references: [id])
  chunks       DocumentChunk[]

  @@index([userId, status])
  @@index([conversationId])
  @@map("attachments")
}

enum AttachmentStatus {
  UPLOADING
  PROCESSING
  READY
  FAILED
}

// ──────────────────────────────────────────
// Document Chunks (RAG)
// ──────────────────────────────────────────
model DocumentChunk {
  id           String                      @id @default(cuid())
  attachmentId String                      @map("attachment_id")
  chunkIndex   Int                         @map("chunk_index")
  content      String
  embedding    Unsupported("vector(1536)")? // pgvector
  metadata     Json?                        @default("{}")
  createdAt    DateTime                     @default(now()) @map("created_at")

  attachment Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)

  @@index([attachmentId, chunkIndex])
  @@map("document_chunks")
}

// ──────────────────────────────────────────
// Usage Events
// ──────────────────────────────────────────
model UsageEvent {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")
  conversationId   String?  @map("conversation_id")
  model            String
  promptTokens     Int      @map("prompt_tokens")
  completionTokens Int      @map("completion_tokens")
  latencyMs        Int      @map("latency_ms")
  costEstimate     Float    @map("cost_estimate")
  createdAt        DateTime @default(now()) @map("created_at")

  user         UserProfile   @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation? @relation(fields: [conversationId], references: [id])

  @@index([userId, createdAt])
  @@index([createdAt])
  @@map("usage_events")
}

// ──────────────────────────────────────────
// API Keys (future enterprise feature)
// ──────────────────────────────────────────
model ApiKey {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  label     String
  hashedKey String    @unique @map("hashed_key")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("api_keys")
}
